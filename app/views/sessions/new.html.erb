<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">登 陆</h1>
    <%= form_for(:session, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :email, '邮箱' %>
          <%= f.text_field :email %>
        </div>
        <div class="field">
          <%= f.label :password, '密码' %>
          <%= f.password_field :password %>
        </div>

        <div class="field">
          <div class='containter'>
            <div class='row'>
              <div class="col-md-6"><%= f.submit "登陆", class: "btn btn-primary" %></div>
              <div class="col-md-6"><%= link_to '注册', new_user_path, class: "btn btn-success btn-block", type: "button" %></div>
            </div>
          </div>
        </div>
        <div class="field">
          <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>记住我</span>
              </div>
          <% end %>
    <% end %>
  </div>
</div>
