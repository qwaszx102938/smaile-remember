<!DOCTYPE html>
<html>
<head>
  <title>
    SmaileRemember</title><%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %><%= javascript_include_tag "application", "data-turbolinks-track" => true %><%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
  </script>
  <![endif]-->
</head>
<body>
<header class="navbar navbar-inverse">
  <div class="container">
    <%= link_to "Smaile Remem", '#', id: "logo" %>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav ">
        <li>
          <%= link_to "翻译", new_translation_path ,class:"h4" %>
        </li>
        <% if logged_in? %>
            <li role="presentation" class="dropdown">
              <a href="#" class="dropdown-toggle h4"  data-toggle="dropdown">用户
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <%= link_to "我的资料", current_user,class:"h4" %>
                </li>
                <li>
                  <%= link_to "设置", edit_user_path(current_user),class:"h4" %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to "退出", logout_path, method: "delete",class:"h4"%>
                </li>
              </ul>
            </li>
        <% else %>
            <li>
              <%= link_to "登录", login_path %>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
<div class="container">
  <% flash.each do |message_type, message| %>
      <div class="alert alert-&lt;%= message_type %&gt;">
        <%= message %>
      </div>
  <% end %>
  <%= yield %><%= debug(params) if Rails.env.development? %>
</div>
</body>
</html>
