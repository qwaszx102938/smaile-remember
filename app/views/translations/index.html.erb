<h1 class="text-center">翻译记录</h1>
<div class="row">
  <% if @remember_items && @remember_items.size>0 %>
      <div class="" id="accordion" role="tablist" aria-multiselectable="true">
  <% @remember_items.each do |remember_item|  %>
            <div class="panel panel-default">
              <div class="panel-heading" role="tab" id="headingOne" >
                <h4>
                <a  href="#collapse<%=remember_item.id%>" data-toggle="collapse" aria-controls="collapse<%=remember_item.id%>">
                  <%=remember_item.remember.to_translation.trans_name%>
                  <span class="pull-right glyphicon glyphicon-arrow-down"></span>
                </a>
                    </h4>
              </div>
              <div id="collapse<%=remember_item.id%>" class="panel-collapse collapse " role="tabpanel" aria-labelledby="headingOne">
                <div class="panel-body">
                  <% translation=remember_item.remember.to_translation%>
                  <% if translation %>
                          <div class="container">
                            <% if translation.trans_translation %>
                                <div class="row">
                                  <div class="col-md-3"><h3 class="text-center text-primary">翻译:</h3></div>
                                  <div class="col-md-9">
                                    <% translation.trans_translation.each do |translation_t| %>
                                        <p class="lead"><%= translation_t %></p>
                                    <% end %>
                                  </div>
                                </div>
                            <% end %>
                            <% if translation.trans_explains %>
                                <hr/>
                                <div class="row">
                                  <div class="col-md-3"><h3 class="text-center text-primary">解析:</h3></div>
                                  <div class="col-md-9">
                                    <% translation.trans_explains.each do |explain| %>
                                        <p class="lead"><%= explain %></p>
                                    <% end %>
                                  </div>
                                </div>
                            <% end %>
                          </div>

                  <% end %>
                </div>
              </div>
            </div>

  <%end%>
      </div>
  <%else%>
      <div class="jumbotron">
        <h1 class="text-center">还没有翻译记录</h1>
      </div>
  <%end%>
</div>

